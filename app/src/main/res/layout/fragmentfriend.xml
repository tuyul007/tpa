<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/com_facebook_button_login_silver_background_color"
        android:weightSum="1"
        android:paddingTop="10dp"
        >
    <RelativeLayout
        android:background="@drawable/com_facebook_tooltip_black_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:paddingTop="@dimen/abc_action_bar_content_inset_material"
        android:paddingRight="@dimen/abc_action_bar_content_inset_material"
        android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/searchContactButton"
            android:src="@drawable/ic_search_icon"
            android:background="@null"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:singleLine="true"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="Enter Contact Name"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputContactName"
            android:imeOptions="actionSearch"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/searchContactButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:paddingTop="@dimen/abc_action_bar_content_inset_material"
        android:paddingRight="@dimen/abc_action_bar_content_inset_material"
        android:paddingBottom="@dimen/abc_action_bar_content_inset_material"

    >
        <ExpandableListView

            android:id="@+id/friendListView"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="413dp"
            android:indicatorLeft="250dp"
            android:indicatorRight="380dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"


            />

    </LinearLayout>


</LinearLayout>