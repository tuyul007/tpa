<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/com_facebook_button_login_silver_background_color"
        android:weightSum="1"
        android:paddingTop="10dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:alpha="0.8">

        <LinearLayout
            android:background="@drawable/round_corner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:singleLine="true"
                android:textColorHint="#A4A1A1"
                android:textColor="#000000"
                android:hint="Enter Contact Name"
                android:background="#00000000"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:id="@+id/inputContactName"
                android:imeOptions="actionSearch"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.97" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_search_icon2"
                android:background="@drawable/search_friend_auto"
                android:clickable="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:paddingTop="@dimen/abc_action_bar_content_inset_material"
        android:paddingRight="@dimen/abc_action_bar_content_inset_material"
        android:paddingBottom="@dimen/abc_action_bar_content_inset_material"

    >
        <ExpandableListView

            android:id="@+id/friendListView"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="413dp"
            android:indicatorLeft="250dp"
            android:indicatorRight="380dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"


            />

    </LinearLayout>


</LinearLayout>