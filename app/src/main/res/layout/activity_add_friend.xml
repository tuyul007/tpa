<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="edu.bluejack151.JChat.jchat3.AccountSetting"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:alpha="0.8"
        >

        <LinearLayout
            android:background="@drawable/round_corner"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:weightSum="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">

            <EditText
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:textColorHint="#A4A1A1"
                android:textColor="#000000"
                android:hint="Enter Friend ID"
                android:background="#00000000"
                android:layout_width="273dp"
                android:layout_height="match_parent"
                android:id="@+id/inputFriendID"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:imeOptions="actionSearch"
                android:layout_toLeftOf="@+id/searchFriendButton"
                android:layout_toStartOf="@+id/searchFriendButton"
                android:layout_weight="0.24" />

        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/searchFriendButton"
            android:src="@drawable/ic_search_icon"
            android:background="@drawable/search_button_add_friend"
           android:alpha="1"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!--android:background="@drawable/btn_border_search"-->
    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ListView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listSearchFriend" />

    </RelativeLayout>

</LinearLayout>
