<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="edu.bluejack151.JChat.jchat3.AccountSetting"
    android:weightSum="1">

    <RelativeLayout
        android:background="@drawable/com_facebook_tooltip_black_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

        <EditText
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:hint="Enter Friend ID"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inputFriendID"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:imeOptions="actionSearch"
            android:layout_toLeftOf="@+id/searchFriendButton"
            android:layout_toStartOf="@+id/searchFriendButton" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/searchFriendButton"
            android:src="@drawable/ic_search_icon"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"

            />

    </RelativeLayout>
    <!--android:background="@drawable/btn_border_search"-->
    <RelativeLayout

        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ListView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listSearchFriend" />

    </RelativeLayout>

</LinearLayout>
